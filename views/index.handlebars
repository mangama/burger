<h1>Da-Burger!</h1>
<hr>
<br>
<div>
  <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQo30V1sEpwnxvQxh6Do1XLHaedrAA1I4ggjr8k7v9N5DHTMRFPrg" class="center">
</div>
<br>
<br>
<div class="row">

  <div class="col-5">
    <h4>Burger To Devour</h4>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </div>
  
  <div class="col-5">
    <h4>Devoured Burgers!</h4>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </div>

</div>

<form class="create-form" >

  <div class="form-group">
    <input type="text" id="bu" name="name">
  <div class="row">
  <button type="submit" id="submitId" >Add Burger</button>
  </div>
</form>